<div class="flex flex-col items-center my-8">
    {% form 'contact' %}
        <div class="form__container">
            <div class="form__group">
                <label for="contact_name" class="form__label">Name</label>
                <input type="text" name="contact[name]" id="contact_name" class="form__input">
            </div>
            <div class="form__group">
                <label for="contact_email" class="form__label">Email</label>
                <input type="text" name="contact[email]" id="contact_email" class="form__input">
            </div>
            <div class="form__group">
                <label for="contact_message" class="form__label">Message</label>
                <textarea name="contact[body]" id="contact_message" class="form__textarea"></textarea>
            </div>
            <div class="form__group">
                <input type="submit" value="Submit Message" class="form__submit">
            </div>
        </div>
    {% endform %}
</div>


<script>
    document.addEventListener('DOMContentLoaded', function () {
        const form = document.querySelector('form');
        form.addEventListener('submit', function (event) {
            let isValid = true;
    
            // Validate Name
            const name = document.getElementById('contact_name');
            if (name.value.trim() === '') {
                isValid = false;
                alert('Name is required.');
                name.focus();
            }
    
            // Validate Email
            const email = document.getElementById('contact_email');
            const emailPattern = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            if (!emailPattern.test(email.value)) {
                isValid = false;
                alert('Please enter a valid email address.');
                email.focus();
            }
    
            // Validate Message
            const message = document.getElementById('contact_message');
            if (message.value.trim() === '') {
                isValid = false;
                alert('Message is required.');
                message.focus();
            }
    
            if (!isValid) {
                event.preventDefault(); // Prevent form submission if validation fails
            }
        });
    });
    
</script>
    
     {% schema %}
     {
     "name": "Contact Form",
     "presets": [
     {
     "name": "Contact Form"
     }
     ]
    }
     {% endschema %}