<div class="customer-page">
    <div class="customer-create-section">
      <div class="customer-create-container">
        <h1 class="signin">Create New Account</h1>
        <div class="customer-create-content">
          <form id="customer_create" action="/account/login" method="post">
            {% if form.errors %}
            <div class="alert" role="alert">
              <strong class="strong">Error!</strong>
              <p class="pppp">{{ form.errors |default_errors }}</p>
            </div>
            {% endif %}
            <div class="form-group">
              <label for="customer-firstname">First Name</label>
              <input
                type="text"
                id="customer-firstname"
                name="customer[firstname]"
                class="input-field"
                required
                placeholder="Enter Your First Name"
              >
            </div>
            <div class="form-group">
              <label for="customer-lastname">Last Name</label>
              <input
                type="text"
                id="customer-lastname"
                name="customer[lastname]"
                class="input-field"
                required
                placeholder="Enter Your Last Name"
              >
            </div>
            <div class="form-group">
              <label for="customer-email">Email</label>
              <input
                type="email"
                id="customer-email"
                name="customer[email]"
                class="input-field"
                required
                placeholder="Enter Your Email"
              >
            </div>
            <div class="form-group">
              <label for="customer-password">Password</label>
              <input
                type="password"
                id="customer-password"
                name="customer[password]"
                class="input-field"
                required
                placeholder="Enter Your Password"
              >
            </div>
            <div class="form-group">
              <button type="submit" class="submit-btn">Create Account</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
  




<script>
    function showRecoverForm() {
      document.querySelector('.customer-login-section').style.display = 'none';
      document.querySelector('.recover-password-section').style.display = 'block';
    }
  
    function showLoginForm() {
      document.querySelector('.recover-password-section').style.display = 'none';
      document.querySelector('.customer-login-section').style.display = 'block';
    }
  </script>



