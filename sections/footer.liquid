<footer>
  <div class="footer-section">
    <div class="footer-container">
      <div class="footer-top">
        <!-- Newsletter Section -->
        <div class="footer-col newsletter-section">
          <h2>Subscribe to Our Newsletter</h2>
          <form class="newsletter-form">
            <input type="email" placeholder="Enter email address" class="newsletter-input">
            <button type="submit" class="btn-submit">Submit</button>
          </form>
        </div>

        <!-- Dynamic Navigation Blocks -->
        {% for block in section.blocks %}
          {% if block.type == 'navigation' %}
            <div class="footer-col">
              <h2>{{ block.settings.linklist.title }}</h2>
              <ul>
                {% for link in block.settings.linklist.links %}
                  <li>
                    <a href="{{ link.url }}">{{ link.title }}</a>
                  </li>
                {% endfor %}
              </ul>
            </div>
          {% endif %}
        {% endfor %}
      </div>

      <!-- Footer Bottom Section -->
      <div class="footer-bottom">
        <p>{{ section.settings.copyright }}</p>
        <p>Made with â™¥ by Colorlib.com</p>
      </div>
    </div>
  </div>
</footer>

