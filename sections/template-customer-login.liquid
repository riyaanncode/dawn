            <div class="forgot-password">
              <a href="#" class="password-forgot" onclick="showRecoverForm()">Forget Your Password?</a>
            </div>
            <div class="form-group">
              <button type="submit" class="submit-btn">Sign In</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  
    <div class="recover-password-section" style="display: none;">
      <div class="recover-password-container">
        <h1>Recover Your Password</h1>
        <div class="recover-password-content">
          <form id="recover-customer-password" action="/account/recover" method="post">
            {% if form.errors %}
            <div class="alert" role="alert">
              <strong class="strong">Error!</strong>
              <p class="pppp">{{ form.errors |default_errors }}</p>
            </div>
            {% endif %}
            <div class="form-group">
              <label for="recover-email">Email</label>
              <input
                type="email"
                id="recover-email"
                name="email"
                class="input-field"
                required
                placeholder="Enter Your Email"
              >
            </div>
            <div class="back-to-login">
              <a href="#" class="back-to-login" onclick="showLoginForm()">Back To Login</a>
            </div>
            <div class="form-group">
              <button type="submit" class="submit-btn">Recover Password</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>




<script>
    function showRecoverForm() {
      document.querySelector('.customer-login-section').style.display = 'none';
      document.querySelector('.recover-password-section').style.display = 'block';
    }
  
    function showLoginForm() {
      document.querySelector('.recover-password-section').style.display = 'none';
      document.querySelector('.customer-login-section').style.display = 'block';
