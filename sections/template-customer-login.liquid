<div class="customer-page">
    <div class="customer-login-section">
      <div class="customer-login-container">
        <h1 class="signin">Sign In</h1>
        <div class="customer-login-content">
          <form id="customer_login" action="/account/login" method="post">
            {% if form.errors %}
            <div class="alert" role="alert">
              <strong class="strong">Error!</strong>
              <p class="pppp">{{ form.errors |default_errors }}</p>
            </div>
            {% endif %}
            <div class="form-group">
              <label for="customer-email">Email</label>
              <input
                type="email"
                id="customer-email"
                name="customer[email]"
                class="input-field"
                required
                placeholder="Enter Your Email"
              >
            </div>
            <div class="form-group">
              <label for="customer-password">Password</label>
