{% comment %}
  <div class="title_">
  <h1>{{ section.settings.title }}</h1>
  </div>
  {% for product in section.settings.featured_collection.products %}
      {% render 'product-cart' ,product:product%}
  {% endfor %}
{% endcomment %}

<div class="featured-collection-section">
  <div class="title_">
    <h1>{{ section.settings.title }}</h1>
  </div>
  <div class="products-grid">
    {% for product in section.settings.featured_collection.products limit: section.settings.number_of_product_to_show %}
      <div class="product-item">
        {% render 'product-cart', product: product %}
       </div>

      {% else %}
       {% for item in (1..4)  %}
        {% render 'product-cart-placeholder' %}
        
       {% endfor %}
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Featured Collection",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Featured Collection"
    },
    {
      "type": "collection",
      "id": "featured_collection",
      "label": "Collection"
    },
    {
      "type": "range",
      "id": "number_of_product_to_show",
      "max": 12,
      "min": 2,
      "default": 2,
      "label": "Number of product to show"
    }
  ],
  "presets": [
    {
       "name":"Featured Collection"
    }
  ]
}
{% endschema %}
