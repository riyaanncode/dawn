{
  "name": "Header",
  "tag": "section",
  "settings": [
    {
      "type": "link_list",
      "id": "menu",
      "label": "Heading Navigation Menu",
      "default": "main-menu"
    }
  ],
  "presets": [
    {
      "name": "Header",
      "settings": {
        "menu": "main-menu"
      }
    }
  ]
}
{% endschema %}

